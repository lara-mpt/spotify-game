{
  "name": "spotify-game",
  "version": "1.0.0",
  "description": "An album guessing game using the Spotify API.",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "install": "npm ci && npm run install-client && npm run install-server",
    "install-client": "npm ci --prefix client",
    "install-server": "npm ci --prefix server",
    "client": "npm start --prefix client",
    "server": "npm start --prefix server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lara-mpt/spotify-game.git"
  },
  "author": "lara_mpt",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^5.1.0"
  },
  "bugs": {
    "url": "https://github.com/lara-mpt/spotify-game/issues"
  },
  "homepage": "https://github.com/lara-mpt/spotify-game#readme"
}
